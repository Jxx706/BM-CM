<div class="row">
	<%= render 'flows/sidebar' %>

	<div class="span9">

		<!-- Page description. How to use! -->
		<div class="page-header">
			<h1>¿Cómo crear un nuevo flujo?</h1>
		</div>
		<p class="lead">
			Proporciona la información solicitada en cada una de las <b>etapas</b> del proceso:
			<ul>
				<li>
					Tipo de flujo a construir.
				</li>
				<li>
					Valores para cada uno de los parámetros obligatorios.
				</li>
				<li>
					Valores para los parámetros pertenecientes a la <b>configuración avanzada.</b>
				</li>
			</ul>
		</p>
		<button class="btn btn-large btn-info" onclick='nextStep(this,"step1")'>¡EMPEZAR!</button>

		<!-- Type of flow -->

		<section id="step1">
			<div class="page-header">
				<h2><strong>Paso I: </strong> ¿Qué tipo de flujo deseas realizar?</h2>
			</div>
			
			<div class="row-fluid">
				<ul class="thumbnails">
					<li class="span4">
						<div class="thumbnail">
							<img src="/assets/system-install-1.png">
							<div class="caption">
								<h3>Instalación</h3>
								<p></p>
							</div>
							<label class="radio" onclick='$("#select_maintenance").fadeOut("fast"); $("#select_tool").fadeIn("fast");'>
								<%= radio_button "radio_button", "type", "install", :onclick => '$("#select_maintenance").fadeIn("fast"); $("#select_tool").fadeOut("fast");' %>
								¡Crear un flujo de <strong><i>instalación</i></strong>!
							</label>
							<%= select_tag "select_tool", options_for_select([["MySQL", "mysql"], ["CouchBase", "couchbase"], ["Tomcat", "tomcat"]]) %>
							<%= javascript_tag '$("#select_tool").hide()' %>
						</div>
					</li>

					<li class="span4">
						<div class="thumbnail">
							<img src="/assets/system-maintenance.png">
							<div class="caption">
								<h3>Mantenimiento</h3>
								<p></p>
							</div>
							<label class="radio" onclick='$("#select_maintenance").fadeIn("fast"); $("#select_tool").fadeOut("fast");'>
								<%= radio_button "radio_button", "type", "maintenance", :onclick => '$("#select_maintenance").fadeIn("fast"); $("#select_tool").fadeOut("fast");' %>
								¡Crear un flujo de <strong><i>mantenimiento</i></strong>!
							</label>
							<%= select_tag "select_maintenance", options_for_select([]) %>
							<%= javascript_tag '$("#select_maintenance").hide()' %>
						</div>
					</li>

					<!-- Empty -->
					<li class="span4">
						<div class="thumbnail">
							<img src="">
							<div "caption">
							</div>
						</div>
					</li>
				</ul>
			</div>

			<button class="btn btn-primary pull-left span3" onclick='nextStep(this,"step2")'>Continuar</button>
		</section>
		<%= javascript_tag '$("#step1").hide()' %>
		
		<!-- Basic and mandatory parameters -->
		<section id="step2">
			<div class="page-header">
				<h2><strong>Paso II: </strong>Información básica</h2> 
			</div>
			<%= form_for :flow, :url => {:action => :create} do |f| %>
				Nombre del flujo: <%= f.text_field :name, :placeholder => "Ejemplo: mysql-installer" %> <br> 
				Nombre del nodo: <%= f.text_field :node_name, :placeholder => "Ejemplo: web-server-one" %> <br>
				<!-- There's a lot more fields missing -->
			<% end %>
			<button class="btn btn-primary pull-left span3" onclick='nextStep(this,"step3");'>Continuar</button>
			<button class="btn btn-warning pull-left span3" onclick='nextStep(this, "advanced-config")'>Configuración avanzada</button>
		</section>
		<%= javascript_tag '$("#step2").hide()' %>				

		<!-- Advanced configuration parameters (i.e. non-mandatory) -->
		<section id="advanced-config">
			<div class="page-header">
				<h2>Configuración avanzada</h2>
			</div>
			<!-- form goes here -->
		</section>
		<%= javascript_tag '$("#advanced-config").hide()' %>
		
	</div>
</div>
