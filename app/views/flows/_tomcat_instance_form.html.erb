<%= content_for :tomcat_instance do %>
	<!-- Mandatory -->
	<%= label_tag "attr_instance_name", "Nombre" %>
	<%= text_field_tag "attr[instance][name]", nil, :id => "attr_instance_name", :placeholder => edit ? hash_attributes["instance"]["name"] : "" %>
	<br>

	<%= label_tag "attr_instance_ensure", "Estado de la instancia" %>
	<%= select_tag "attr[instance][ensure]", options_for_select([["Presente", "present"], ["Corriendo", "running"], ["Detenida", "stopped"], ["Instalada", "installed"], ["Ausente", "absent"]]) %>
	<br>

	<%= label_tag "attr_instance_owner", "Propietario" %>
	<%= text_field_tag "attr[instance][owner]", nil, :id => "attr_instance_owner", :placeholder => edit ? hash_attributes["instance"]["owner"] : Flow.defaults("tomcat")["instance"]["owner"] %>
	<br>

	<%= label_tag "attr_instance_group", "Grupo" %>
	<%= text_field_tag "attr[instance][group]", nil, :id => "attr_instance_group", :placeholder => edit ? hash_attributes["instance"]["group"] : Flow.defaults("tomcat")["instance"]["group"] %>
	<br>

	<%= label_tag "attr_instance_server_port", "Puerto del servidor" %>
	<%= text_field_tag "attr[instance][server_port]", nil, :id => "attr_instance_server_port", :placeholder => edit ? hash_attributes["instance"]["server_port"] : Flow.defaults("tomcat")["instance"]["server_port"] %>
	<br>

	<%= label_tag "attr_instance_http_port", "Puerto HTTP" %>
	<%= text_field_tag "attr[instance][http_port]", nil, :id => "attr_instance_http_port", :placeholder => edit ? hash_attributes["instance"]["http_port"] : Flow.defaults("tomcat")["instance"]["http_port"] %>
	<br>

	<%= label_tag "attr_instance_ajp_port", "Puerto AJP" %>
	<%= text_field_tag "attr[instance][ajp_port]", nil, :id => "attr_instance_ajp_port", :placeholder => edit ? hash_attributes["instance"]["ajp_port"] : Flow.defaults("tomcat")["instance"]["ajp_port"] %>
	<br>

	<%= label_tag "attr_instance_sample", "Ejemplo" %>
	<%= select_tag "attr[instance][sample]", options_for_select([["Si", true], ["No", false]]) %>
	<br>
<% end %>