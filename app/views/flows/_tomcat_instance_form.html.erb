<%= content_for :tomcat_instance do %>
	<%= label_tag "attr_instance_name", "Nombre" %>
	<%= text_field_tag "attr[instance][name]", nil, :id => "attr_instance_name" %>
	<br>

	<%= label_tag "attr_instance_ensure", "Estado de la instancia" %>
	<%= select_tag "attr[instance][ensure]", options_for_select([["Presente", "present"], ["Corriendo", "running"], ["Detenida", "stopped"], ["Instalada", "installed"], ["Ausente", "absent"]]) %>
	<br>

	<%= label_tag "attr_instance_owner", "Propietario" %>
	<%= text_field_tag "attr[instance][owner]", nil, :id => "attr_instance_owner" %>
	<br>

	<%= label_tag "attr_instance_group", "Grupo" %>
	<%= text_field_tag "attr[instance][group]", nil, :id => "attr_instance_group" %>
	<br>

	<%= label_tag "attr_instance_server_port", "Puerto del servidor" %>
	<%= text_field_tag "attr[instance][server_port]", nil, :id => "attr_instance_server_port" %>
	<br>

	<%= label_tag "attr_instance_http_port", "Puerto HTTP" %>
	<%= text_field_tag "attr[instance][http_port]", nil, :id => "attr_instance_http_port" %>
	<br>

	<%= label_tag "attr_instance_ajp_port", "Puerto AJP" %>
	<%= text_field_tag "attr[instance][ajp_port]", nil, :id => "attr_instance_ajp_port" %>
	<br>

	<%= label_tag "attr_instance_sample", "Ejemplo" %>
	<%= select_tag "attr[instance][sample]", options_for_select([["Si", "yes"], ["No", "no"]]) %>
	<br>
<% end %>