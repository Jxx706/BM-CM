<div class="row">
	<div class="span4">
		<h2>¿Qué deseas hacer?</h2>

		<%= link_to download_installer_path, :method => :get, :class => "btn btn-success" do %>
			<i class="icon-white icon-download"></i>Descargar
		<% end %>
		<br>
		<br>
		<%= link_to destroy_installer_path,  :method => :delete, :class => "btn btn-danger" do %>
			<i class="icon-white icon-remove-circle"></i>Descartar
		<% end %>
	</div>
	<div class="span8">
		<div class="page-header">
			<h1>Vista previa del instalador</h1>
		</div>
		<pre>
			<%= @installer_content %>
		</pre>
	</div>
</div>